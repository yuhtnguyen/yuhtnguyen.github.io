# Environment Variables Template
# Copy this file to .env.local and fill in your actual API keys

# AI Service Configuration
# Get your free Gemini API key from: https://ai.google.dev/
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API key (optional, paid service)
# Get from: https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Development Configuration
VITE_APP_NAME=Portfolio Website
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# Analytics (optional)
VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here

# Contact Information (update with your details)
VITE_CONTACT_EMAIL=your.email@example.com
VITE_CONTACT_PHONE=+84123456789

# Social Media Links (update with your profiles)
VITE_GITHUB_URL=https://github.com/yourusername
VITE_LINKEDIN_URL=https://linkedin.com/in/yourusername

# API Configuration
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=3

# Feature Flags
VITE_ENABLE_AI_CHATBOT=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PWA=false

# Performance Configuration
VITE_LAZY_LOADING=true
VITE_IMAGE_OPTIMIZATION=true
